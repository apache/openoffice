+  isDirect
+      = (account == XML_ACCOUNT_DIRECT) && (originParser == rootParser);
+  bytesMore = after - before;
+
+  additionTarget
+      = isDirect ? &rootParser->m_accounting.countBytesDirect
+                 : &rootParser->m_accounting.countBytesIndirect;
