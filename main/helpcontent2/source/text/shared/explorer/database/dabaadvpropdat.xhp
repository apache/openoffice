<meta>
      <topic id="textsharedexplorerdatabasedabaadvpropdatxml" indexer="include">
         <title xml-lang="en-US" id="tit">Special Settings</title>
         <filename>/text/shared/explorer/database/dabaadvpropdat.xhp</filename>
      </topic>
