<bookmark xml-lang="en-US" branch="hid/sw:NumericField:TP_TEXTGRID_PAGE:NF_CHARSPERLINE" id="bm_id3153668" localize="false"/>
<paragraph role="heading" id="hd_id3152957" xml-lang="en-US" level="3" l10n="U" oldref="10">Characters per line</paragraph>
